@model IEnumerable<Bikijada_MVC.Models.Borba>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="padding-top:20px; padding-bottom:10px">Borbe bikova</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kategorija)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vlasnik1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bik1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vlasnik2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bik2)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
           </td>
           <td>
                @Html.DisplayFor(modelItem => item.Kategorija)
           </td>
           <td>
                @Html.DisplayFor(modelItem => item.Vlasnik1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bik1.Ime)
            </td>   
            <td>
                @Html.DisplayFor(modelItem => item.Vlasnik2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bik2.Ime)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
