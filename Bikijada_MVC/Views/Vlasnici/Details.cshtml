@model Bikijada_MVC.Models.Vlasnik

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="padding-top:20px; padding-bottom:10px">Details</h1>

<div>
    <h4 style="padding-top:20px; padding-bottom:10px">Vlasnik</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ime):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Mjesto):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mjesto)
        </dd>
        <dt class="col-sm-2">
            Bikovi koje posjeduje:
        </dt>
        <dd class="col-sm-10">
            @foreach (var bull in ViewBag.ownedBulls)
            {
                <div>
                    @bull.Ime - @bull.Kategorija.ToLower() kategorija
                </div>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
